<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardProjectItem"
    style="@style/CardProjectItem"
    card_view:cardElevation="4dp"
    card_view:contentPadding="4dp"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layProjectItem"
                    style="@style/LayoutProjectItem">

        <TextView
            android:id="@+id/txtName"
            style="@style/TextProjectName"/>

        <LinearLayout
            android:id="@+id/layProjectContent"
            style="@style/LayoutProjectContent">

            <ImageView
                android:id="@+id/imgProject"
                android:src="@android:drawable/btn_default"
                style="@style/ImageProject"/>

            <TextView
                android:id="@+id/txtDesc"
                android:text=""
                style="@style/TextProjectDesc"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtCompany"
            style="@style/TextProjectCompany"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
