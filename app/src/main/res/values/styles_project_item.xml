<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardProjectItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="LayoutProjectItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="LayoutProjectContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/txtName</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="ImageProject">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="TextProjectName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="TextProjectDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="TextProjectCompany">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/layProjectContent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">start</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>